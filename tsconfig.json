{
    "compilerOptions": {
        "declaration": true,
        "declarationDir":"./typings",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "strictNullChecks": true,
        //"types": ["canvassprite"],
        //"typeRoots":["./types"],
        "baseUrl":".",
        "rootDir": ".",
        "charset":"utf-8",
        "target": "es5",
        "lib": [
            "es6",
            "dom",
            "es2015.promise"
        ],
        "outDir": "./dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}